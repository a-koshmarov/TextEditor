<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="pane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.AuthorizationController">
    <children>
        <Label layoutX="226.0" layoutY="145.0" text="Username">
            <font>
                <Font size="14.0" />
            </font></Label>
        <Label layoutX="226.0" layoutY="195.0" text="Password">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Label layoutX="192.0" layoutY="72.0" text="Authorization" textAlignment="CENTER">
            <font>
                <Font name="Tw Cen MT Condensed Bold" size="45.0" />
            </font>
        </Label>


        <TextField fx:id="usernameField" layoutX="226.0" layoutY="167.0" promptText="enter username" />
        <PasswordField fx:id="passwordField" layoutX="226.0" layoutY="216.0" promptText="enter password" />


        <Button layoutX="226.0" layoutY="249.0" mnemonicParsing="false" onAction="#handleConfirmButton" prefHeight="25.0" prefWidth="63.0" text="Submit" />
        <Button layoutX="312.0" layoutY="249.0" mnemonicParsing="false" onAction="#handleCancelButton" prefHeight="25.0" prefWidth="63.0" text="Cancel" />
        <Label fx:id="error" layoutX="207.0" layoutY="122.0" text="Wrong username or password" textFill="#979797" visible="false">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
